<?xml version="1.0" encoding="UTF-8" ?>

<!-- A copy of this file is necessary in src/Resources/config/doctrine for SF <5.4 compatibility. If this file is updated the copy needs to be updated too -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Vich\TestBundle\Entity\ValidatedImage">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="title" column="title" nullable="true"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <embedded name="imageEntity" class="Vich\UploaderBundle\Entity\File" column-prefix="image_"/>
    </entity>
</doctrine-mapping>