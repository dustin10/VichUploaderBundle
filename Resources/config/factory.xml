<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="vich_uploader.property_mapping_factory.class">Vich\UploaderBundle\Mapping\CachedPropertyMappingFactory</parameter>
    </parameters>

    <services>

        <service id="vich_uploader.property_mapping_factory" class="%vich_uploader.property_mapping_factory.class%" public="false">
            <argument type="service" id="service_container" />
            <argument type="service" id="vich_uploader.metadata_reader" />
            <argument type="service" id="vich_uploader.adapter" />
            <argument>%vich_uploader.mappings%</argument>
        </service>

        <service id="vich_uploader.storage_factory" class="Vich\UploaderBundle\Storage\StorageFactory">
            <argument type="service" id="service_container" />
        </service>

    </services>

</container>
